<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activities.ExoplayerActivity"
        android:background="#000">


        <!-- activity_player.xml-->
        <com.google.android.exoplayer2.ui.PlayerView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:resize_mode="fill"/>

        <!--Header-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="?attr/actionBarSize"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_full_screen"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginLeft="20dp"
                android:onClick="fullScreen"/>

            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/ivDownload"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_file_download_white"
                android:layout_marginRight="20dp"
                android:onClick="download"
                />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/ic_report_problem_black_24dp"
                android:layout_marginRight="20dp"
                android:onClick="report"/>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/filled_star"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/filled_star"
                    android:layout_marginRight="30dp"
                    android:visibility="gone"
                    android:onClick="removeFavorite"/>

                <ImageView
                    android:id="@+id/empty_star"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/empty_star"
                    android:layout_marginRight="30dp"
                    android:onClick="addFavorite"/>

            </FrameLayout>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/share"
                android:layout_marginRight="20dp"
                android:onClick="share"/>


        </LinearLayout>

        <!--Progress Bar-->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible"/>

        <ImageView
            android:id="@+id/no_signal_icon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/no_signal"
            android:layout_gravity="right|top"
            android:layout_marginTop="90dp"
            android:layout_marginRight="20dp"
            android:visibility="gone"
            android:tint="#fff"/>

    </FrameLayout>

</layout>