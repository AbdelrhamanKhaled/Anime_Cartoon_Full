<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="com.app.cartoons.anime.newappcartoons.model.Cartoon" />
        <import type="java.util.List" />

        <variable
            name="cartoonList"
            type="List&lt;Cartoon>"/>
    </data>


    <FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical">


        <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
            android:id="@+id/swipe_refresh_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/cartoons_recyclerview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cartoonListBinding="@{cartoonList}"
                />

        </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>


        <FrameLayout
            android:id="@+id/progressBarLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:elevation="7dp"
            android:visibility="gone"
            android:onClick="progressBar"
            android:background="@color/mytransparentBackgroud"
            >

            <com.github.ybq.android.spinkit.SpinKitView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/progress"
                style="@style/SpinKitView.Large.Circle"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                app:SpinKit_Color="@color/colorAccent" />


        </FrameLayout>

    </FrameLayout>

</layout>