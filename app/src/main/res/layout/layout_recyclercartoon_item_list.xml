<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tool="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <import type="com.anime.rashon.speed.loyert.model.Cartoon"/>

        <variable
            name="cartoon"
            type="Cartoon"
            />
    </data>


    <LinearLayout
        android:paddingBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">


        <androidx.cardview.widget.CardView
            android:foreground="?android:attr/selectableItemBackground"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            app:cardCornerRadius="5dp"
            android:layout_margin="5dp"
            app:cardBackgroundColor="#fff"
            app:cardElevation="6dp"
            android:layout_gravity="start"
            >

            <ImageView
                android:id="@+id/playlistImg"
                android:layout_width="120dp"
                android:layout_height="140dp"
                android:scaleType="fitXY"
                app:imgUrl="@{cartoon.thumb}" />

        </androidx.cardview.widget.CardView>


        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:background="@drawable/title_background"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="@{cartoon.title}"
                android:textColor="@color/AnimeTextColor_1"
                tool:text="Cartoon Name" />

            <LinearLayout
                android:layout_marginBottom="4dp"
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layoutDirection="rtl"
                android:gravity="center"
                android:orientation="horizontal">



                <TextView
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLength="25"
                    android:text="8.27"
                    android:textSize="13sp"
                    android:textColor="@color/AnimeTextColor_2"
                    android:drawablePadding="8dp"
                    android:drawableEnd="@drawable/ic_star"
                    />


                <TextView
                    android:layout_marginStart="16dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLength="25"
                    android:text="مستمر"
                    android:textSize="13sp"
                    android:textColor="@color/AnimeTextColor_2"
                    />

            </LinearLayout>


        </androidx.appcompat.widget.LinearLayoutCompat>

    </LinearLayout>
</layout>