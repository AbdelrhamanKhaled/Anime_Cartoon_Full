<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:background="?attr/AppBackgroundColor"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:gravity="center"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/add_photo"
        android:layout_marginTop="16dp"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/user_profile"
        app:civ_border_width="1dp"
        app:civ_border_color="?attr/infoTextColor_1"/>

    <LinearLayout
        android:layoutDirection="rtl"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">


        <EditText
            android:textColorHint="?attr/hint_color"
            android:textColor="?attr/infoTextColor_1"
            android:inputType="textEmailAddress"
            android:imeOptions="actionNext"
            android:drawablePadding="4dp"
            android:id="@+id/email"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_baseline_email_24"
            android:background="@drawable/edit_shap"
            android:hint="البريد الألكتروني" />

        <EditText
            android:textColorHint="?attr/hint_color"
            android:textColor="?attr/infoTextColor_1"
            android:imeOptions="actionDone"
            android:id="@+id/password"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:inputType="textPassword"
            android:layout_marginTop="18dp"
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:gravity="center"
            android:drawableLeft="@drawable/ic_baseline_lock_24"
            android:background="@drawable/edit_shap"
            android:hint="كلمة المرور" />



        <Button
            android:textColor="?attr/defaultBtnTxtColor"
            android:id="@+id/Login"
            android:layout_width="163dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="26dp"
            android:background="@drawable/btnedit"
            android:text="تسجيل الدخول"
            android:textAlignment="center"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/or"
            android:textAlignment="center"
            android:layout_marginTop="16dp"
            android:textColor="?attr/hint_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="المتابعة بإستخدام " />

        <LinearLayout
            android:layoutDirection="rtl"
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <Button
                android:layout_marginLeft="32dp"
                android:id="@+id/google"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="26dp"
                android:background="@drawable/google"
                android:textAlignment="center"
                android:textSize="16sp" />

            <Button
                android:id="@+id/facebook"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"
                android:background="@drawable/facebook"
                android:textAlignment="center"
                android:textSize="16sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/Register"
            android:textAlignment="center"
            android:layout_marginTop="32dp"
            android:textColor="?attr/register_msg_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:text="ليس لديك حساب قم بإنشاء واحد الأن" />



        <TextView
            android:id="@+id/forgetPassword"
            android:textAlignment="center"
            android:layout_marginTop="12dp"
            android:textColor="?attr/register_msg_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="نسيت كلمة المرور" />

    </LinearLayout>

</LinearLayout>