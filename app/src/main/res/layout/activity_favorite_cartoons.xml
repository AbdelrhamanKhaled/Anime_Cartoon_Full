<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>
        <import type="com.anime.rashon.speed.loyert.model.Cartoon" />
        <import type="java.util.List" />

        <variable
            name="cartoonList"
            type="List&lt;Cartoon>"/>
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layoutDirection="rtl"
        tools:context=".activities.FavoriteCartoonsActivity">

        <include
            android:id="@+id/included_toolbar"
            layout="@layout/layout_toolbar" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/cartoons_recyclerview"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:favoriteCartoonListBinding="@{cartoonList}"
            android:layout_weight="1"/>

        <LinearLayout
            android:id="@+id/add_container"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:orientation="vertical"
            />

    </LinearLayout>

</layout>