<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.cartoons.anime.newappcartoons">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:name=".app.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true"
        android:requestLegacyExternalStorage="true">
        <activity android:name=".activities.ServersActivity"></activity>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />

        <activity
            android:name=".activities.OfflineExoplayerActivity"
            android:configChanges="orientation|screenSize|layoutDirection" />
        <activity
            android:name=".activities.DownloadsActivity"
            android:configChanges="orientation|screenSize|layoutDirection" />
        <activity
            android:name=".activities.FavoriteCartoonsActivity"
            android:configChanges="orientation|screenSize|layoutDirection" />

        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-5620187745322623~4930897287" />

        <activity
            android:name=".activities.MainActivity"
            android:configChanges="orientation|screenSize|layoutDirection">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.RedirectActivity"
            android:configChanges="orientation|screenSize|layoutDirection" />
        <activity
            android:name=".activities.PlayListsActivity"
            android:configChanges="orientation|screenSize|layoutDirection" />
        <activity
            android:name=".activities.EpisodesActivity"
            android:configChanges="orientation|screenSize|layoutDirection" />
        <activity
            android:name=".activities.ExoplayerActivity"
            android:configChanges="orientation|screenSize|layoutDirection" />
        <activity
            android:name=".activities.FavoriteEpisodeActivity"
            android:configChanges="orientation|screenSize|layoutDirection" />

    </application>

</manifest>